<?xml version="1.0" encoding="utf-8"?>

<addonManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="http://schemas.apprenda.com/AddonManifest"
               xsi:schemaLocation="http://schemas.apprenda.com/AddonManifest http://apprenda.com/schemas/platform/6.0/AddonManifest.xsd"
               name="NetApp Volume Addon"
               description="Use this addon to provision NetApp Volumes on your ONTAP filer"
               deploymentNotes="V1.2.1 introduces support for SnapMirror data protection and load sharing, currently as a 1:1 mapping."
               developerHelp="contact cdutra@apprenda.com for assistance."
               vendor="Apprenda"
               author="Chris Dutra"
               version="1.2.2-Alpha"
               manifestVersion="2"
               provisioningUsername=""
               provisioningPassword=""
               provisioningLocation="">
  <properties>
    <property key="requireDevCredentials" displayName="Require Developer Credentials"
              description="If set to true, each developer will need to provide their own Amazon credentials, otherwise the default creds will be used to provision RDS instances."
              value="false" />
    <property key="clustermgtendpoint" displayName="NetApp Endpoint" description="Endpoint to Connect to Data ONTAP"
              value="" />
    <property key="adminusername" value="" description="The account used to login to ONTAP"
              displayName="Admin Username" />
    <property key="adminpassword" value="" description="The password associated with the above username"
              displayName="Admin Password" />
    <property key="vserver" value="apprendaVServer" description="The VServer Associated with this filer"
              displayName="VServer" />
    <property key="defaultprotocol" description="The default protocol for accessing data. Values can be NFS, CIFS"
              displayName="Default Protocol" value="CIFS" />
    <property key="defaultaggregate"
              description="The default aggregate for creating volumes. Can be overridden for advanced users."
              displayName="Default Aggregate" value="aggr1" />
    <property key="defaultRootPath" description="Default path of how volumes/shares are provisioned."
              displayName="Volume Root Path" value="/vol" />
    <property key="snapenable" description="To turn on SnapMirror" displayName="Enable SnapMirror" value="true" />
    <property key="vaultenable" description="To enable SnapVault" displayName="Enable SnapVault" value="false" />
    <property key="snaptype" description="Which type of protection policy to use as a default. Options - dp, ls"
              displayName="SnapMirror Type" value="dp" />
    <property key="snapvaultschedule" description="Frequency of SnapVault invocation" displayName="SnapVault Schedule"
              value="weekly" />
    <property key="snapmirrorschedule" description="Frequency of SnapMirror invocation."
              displayName="SnapMirror Schedule" value="hourly" />
    <property key="snapvaultpolicyname" displayName="SnapVault Policy"
              description="Policy to use when creating SnapVault" value="default" />
    <property key="snapmirrorpolicyname" displayName="SnapMirror Policy"
              description="Policy to use when creating SnapMirror" value="default" />
    <property key="shareendpoint" displayName="ShareEndpoint" description="Endpoint used to access shares" value="" />
    <property key="scriptrepotype" displayName="Script Repository Type"
              description="Local (non-production), Server, CloudStorage" value="" />
    <property key="scriptrepo" displayName="Script Repository"
              description="Repository for managing the powershell scripts, allowing for modular development."
              value="https://s3.amazonaws.com/apprenda.netapp.scripts/" />
    <property key="maxallocatedstorage" displayName="Maximum Allocated Storage Per Volume"
              description="The maximum amount of storage allowed to be provisioned by the developer" value="1G" />
  </properties>
  <parameters allowUserDefinedParameters="true">
    <parameter key="size" displayName="Volume Size" isRequired="true" defaultValue="20M"
               description="The size of the Netapp Volume" />
    <parameter key="name" displayName="Volume Name" isRequired="true" defaultValue=""
               description="The name of the Netapp Volume" />
  </parameters>
</addonManifest>